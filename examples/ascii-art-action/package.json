    "prettier": "3.4.2",
    "rimraf": "6.0.1",
    "rollup": "4.34.3",
    "ts-node": "^10.9.2",
    "tslib": "2.8.1",
    "tsx": "^4.19.3",
    "typescript": "5.7.3"
